<div class="product_edit_big_box">
	<h1 id="ooo">商品編集画面</h1>

		<%= form_for(@product) do |f|%>

		<div class="product_edit_artist">
			<h2>アーティスト名<%= f.text_field :artist %></h2>
		</div>
		<div class="product_edit_album">
			<h2>CD名<%= f.text_field :album %></h2>
		</div>

		<div class="product_edit_image_name">
			<div class="product_edit_margin">
				<div class="product_edit_image">
					<h2><%= attachment_image_tag @product, :image ,:size => "300x300" %></h2>
					<%= f.attachment_field :image %>
				</div>
				<div class="product_edit_label">
					<table border="1">
						<caption></caption>
							<thead>
								<tr>
									<td>レーベル</td><td><%= @product.label %></td>
								</tr>
								<tr>
									<td>ジャンル</td><td><%= f.select :genre,Product.genres.keys.to_a, {} %></td>
								</tr>
								<tr>
									<td>状態</td><td><%= f.select :status,Product.statuses.keys.to_a, {} %></td>
								</tr>
							</thead>
						<tbody></tbody>
					</table>
				</div>
			</div>
		</div>

		<div class="product_edit_song_index">
			<div class="product_edit_margin">
				<div class="product_edit_song">
					<h1>曲</h1>
				</div>
			<div class="product_edit_introduction">
				<h2><%= f.text_area :introduction ,:size =>"47x31"%></h2>
			</div>
		</div>

		  <%= f.submit "変更を保存" , :class=>"btn"  %>

	<% end %>
</div>